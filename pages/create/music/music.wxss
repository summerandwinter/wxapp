/**explore.wxss**/

page {
  background-color: #fff;
  font-family: PingFangSC-Thin, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.iconfont {
  display: inline-block;
  position: relative;
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.container {
  position: relative;
  padding: 0;
  background-color: #fff;
  box-sizing: border-box;
  min-height: 100%;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.banner {
  width: 750rpx;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}

.banner-inner {
  width: 120%;
  height: 120%;
  position: absolute;
  left: -10%;
  top: -10%;
  background: #000;
  background-position: center;
  background-size: cover;
  filter: blur(5px) brightness(0.6);
}

.cover-container {
  position: absolute;
  left: 100rpx;
  top: 210rpx;
  width: 300rpx;
  height: 300rpx;
  border: 10rpx #fff solid;
}

.cover {
  width: 300rpx;
  height: 300rpx;
}

.title {
  position: absolute;
  bottom: 5rpx;
  left: 450rpx;
  display: block;
  color: #fff;
  font-size: 50rpx;
  text-align: left;
  line-height: 60rpx;
  padding-top: 30rpx;
}

.author {
  position: absolute;
  left: 450rpx;
  top: 5rpx;
  display: block;
  text-align: left;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #8a8a8a;
}

.creater {
  width: 750rpx;
  margin: 0 auto;
  min-height: 100%;
  background: #fff;
}

.content-body {
  position: relative;
  width: 750rpx;
  margin: 0;
  padding: 0;
  border: 0;
}

.info-container {
  width: 750rpx;
  margin: 0 auto;
  padding-top: 200rpx;
  padding-bottom: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}

.lyric-contaner {
  width: 550rpx;
  margin: 0;
  padding: 0;
  border: 0;
}
.editor{
  width: 550rpx;
  margin: 0;
  padding: 0;
  border: 0;
}
.text {
  width: 90%;

}

.lyric-line {
  display: block;
}

.lxCheckboxGroup {
  width: 550rpx;
}

.lxCheckboxGroup view {
  margin: 4px auto;
}

.lxCheckboxGroup icon {
  float: left;
}

.lxCheckboxGroup text {
  font-size: 12px;
  margin-left: 24px;
  height: 20px;
  line-height: 20px;
  display: block;
}

.success_circle {
  color: #0aba07;
}

.circle {
  color: #8a8a8a;
}

.tips {
  color: #bfbfbf;
  text-align: center;
}

.toolbar {
  position: fixed;
  background: #fff;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: baseline;
  align-content: flex-start;
}

.photo-logo {
  color: #fff;
  position: absolute;
  font-size: 80rpx;
  right: 0;
  bottom: 0;
}

.toolbar-item {
  width: 250rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: baseline;
  align-content: flex-start;
  color: #8a8a8a;
}

.option-tip {
  padding-left: 15rpx;
}
