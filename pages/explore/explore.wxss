/**explore.wxss**/

.nav {
  position: fixed;
  display: flex;
  flex-direction: row;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.nav-item {
  width: 120rpx;
  position: relative;
  align-items: center;
  text-align: center;
  justify-content: center;
  background-color: #fff;
  font-size: 36rpx;
}

.tab {
  color: #888;
  height: 100rpx;
  line-height: 100rpx;
}

.tab.selected {
  color: #000;
}

.tab.selected::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 6rpx;
  background-color: #000;
}

.content.withNav {
  top: 100rpx;
}

.content {
  height: 100%;
  background: #f4f4f4;
}

.item {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.movie .item-photo {
  width: 100%;
  height: 450rpx;
  margin: 0;
  padding: 0;
  border: 0;
}

.movie .item-title {
  font-family: PingFangSC-Regular, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: block;
  color: #000;
  font-size: 19px;
  text-align: center;
  line-height: 25px;
  width: 598rpx;
  margin: 76rpx auto 20rpx;
  padding-bottom: 20rpx;
}

.movie .item-word {
  font-family: PingFangSC-Thin, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: block;
  font-size: 15px;
  line-height: 20px;
  text-align: center;
  color: #888;
  word-wrap: break-word;
  width: 640rpx;
  margin: 0 auto;
  padding-bottom: 60rpx;
}

.movie .item-meta {
  font-family: PingFangSC-Thin, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  width: 640rpx;
  font-size: 12px;
  margin: 0 auto;
}

.movie .meta-container {
  width: 100%;
  display: flex;
  padding-bottom: 16px;
}

.movie .userinfo {
  height: 16px;
  flex: 1;
  display: flex;
}

.movie .avatar {
  width: 16px;
  height: 16px;
  flex: 1;
}

.movie .avatar image {
  width: 16px;
  height: 16px;
}

.movie .nickname {
  flex: 1;
  width: 100rpx;
  color: #aaa;
  padding-left: 12px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 16px;
}

.movie .time {
  flex: 1;
  text-align: right;
  color: #aaa;
}

.book {
  min-height: 500rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #353535;
  position: relative;
}

.book:nth-child(odd) {
  color: #fff;
  background-color: #353535;
}

.book:nth-child(even) {
  color: #000;
  background-color: #fff;
}

.book .item-word {
  font-size: 14pt;
  line-height: 25pt;
  height: 50pt;
  text-align: left;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  width: 640rpx;
  overflow: hidden;
  
}

.book .meta {
  position: absolute;
  right: 20rpx;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: right;
}

.book .dot {
  color: #fff;
  font-size: 24rpx;
  padding: 0 6rpx;
}

.book:nth-child(even) .title {
  color: #000;
}

.book:nth-child(even) .dot {
  color: #000;
}

.book:nth-child(even) .author {
  color: #000;
}

.book:nth-child(odd) .title {
  color: #fff;
}

.book:nth-child(odd) .author {
  color: #fff;
}

.book:nth-child(odd) .dot {
  color: #fff;
}

.music {
  
  width: 100%;
  display: flex;
  position: relative;
  color: #fff;
  overflow: hidden;
  margin-bottom: 0;
}

.music .item-bg {
  background-color: #a0a0a0;
  background-position: center;
  position: absolute;
  top: 0px;
  left: 0px;
  height: 120%;
  width: 120%;
  margin: -10%;
  background-size: cover;
  filter: blur(20px) brightness(0.6);
}

.music .bg-cover {
  position: absolute;
  top: 0px;
  left: 0px;
  background-color: rgba(0, 0, 0, 0.4);
  height: 100%;
  width: 100%;
}

.music .item:nth-child(odd) {
  color: #fff;
}

.music .item:nth-child(even) {
  color: #000;
}

.music .item:nth-child(odd) .bg-cover {
  background: rgba(0, 0, 0, 0.6);
}

.music .item:nth-child(even) .bg-cover {
  background: rgba(255, 255, 255, 0.8);
}

.music .item-word {
  vertical-align: middle;
  display: table-cell;
  height: 100px;
  font-size: 14px;
  line-height: 25px;
  padding: 100rpx 40rpx;
  position: relative;
  text-align: center;
  align-items: center;
  justify-content: center;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  width: 640rpx;
  overflow: hidden;
}

.music .meta {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center;
}

.music .dot {
  font-size: 24rpx;
  padding: 0 6rpx;
}
