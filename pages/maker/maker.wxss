/**maker.wxss**/
page{
  background-color: #fff;
}
.page-section {
  margin: 0 40rpx;
}

.uploader-box {
  position: relative;
  margin-top: 40rpx;
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
  background-color: #dedede;
}

.uploader-input {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -40rpx;
  margin-top: -50rpx;
  width: 80rpx;
  height: 80rpx;
  background-image: url('data:image/png;base64,');
  background-size: cover;
}

.uploader-tips {
  position: absolute;
  top: 58%;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  font-weight: 400;
  color: #bfbfbf;
}

.image-preview {
  margin-top: 40rpx;
  width: 100%;
  height: 360rpx;
}

.image {
  width: 100%;
  height: 360rpx;
}

.title {
  padding: 0 8rpx;
  margin-top: 40rpx;
  font-size: 56rpx;
  color: #bfbfbf;
  font-weight: 400;
}

.title-placeholder {
  font-size: 50rpx;
  color: #bfbfbf;
  font-weight: 400;
}

.text-placeholder {
  font-size: 36rpx;
  color: #bfbfbf;
  font-weight: 200;
}

.text {
  padding: 0;
  width: 100%;
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #bfbfbf;
  min-height: 360rpx;
}

button[type="default"] {
  width: 60%;
  margin: 40px auto 0;
  color: #8a8a8a;
}
