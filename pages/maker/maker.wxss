/**maker.wxss**/
page{
  background-color: #fff;
}
.page-section {
  margin: 0 40rpx;
}

.uploader-box {
  position: relative;
  margin-top: 40rpx;
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
  background-color: #dedede;
}

.uploader-input {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -40rpx;
  margin-top: -50rpx;
  width: 80rpx;
  height: 80rpx;
  background-image: url('data:image/png;base64,');
  background-size: cover;
}

.uploader-tips {
  position: absolute;
  top: 58%;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  font-weight: 400;
  color: #bfbfbf;
}

.image-preview {
  margin-top: 40rpx;
  width: 100%;
  height: 360rpx;
}

.image {
  width: 100%;
  height: 360rpx;
}

.title {
  padding: 0 8rpx;
  margin-top: 40rpx;
  font-size: 56rpx;
  color: #bfbfbf;
  font-weight: 400;
}

.title-placeholder {
  font-size: 50rpx;
  color: #bfbfbf;
  font-weight: 400;
}

.text-placeholder {
  font-size: 36rpx;
  color: #bfbfbf;
  font-weight: 200;
}

.text {
  padding: 0;
  width: 100%;
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #bfbfbf;
  min-height: 360rpx;
}

.toolbar {
  position: fixed;
  background: #fff;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: baseline;
  align-content: flex-start;
}

.photo-logo {
  color: #fff;
  position: absolute;
  font-size: 80rpx;
  right: 0;
  bottom: 0;
}

.toolbar-item {
  width: 250rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: baseline;
  align-content: flex-start;
  color: #8a8a8a;
}

.option-tip {
  padding-left: 15rpx;
  font-size: 30rpx;
}

button::selection {
  background-color: transparent;
  color: #8a8a8a;
}

button::-moz-selection {
  background-color: transparent;
  color: #8a8a8a;
}

button::-webkit-selection {
  background-color: transparent;
  color: #8a8a8a;
}

button:hover {
  background-color: transparent;
  color: #8a8a8a;
}

button {
  border: none;
  outline: none;
  background-color: transparent;
  margin-left: auto;
  margin-right: auto;
  padding-left: 0px;
  padding-right: 0px;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  border-radius: 0px;
  -webkit-appearance: none;
  -webkit-tap-highlight-color: transparent;
  overflow: visible;
  color: #8a8a8a;
}

button::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 0px solid rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-appearance: none;
  -webkit-tap-highlight-color: transparent;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}