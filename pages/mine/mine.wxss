/**mine.wxss**/

.content {
  height: 100%;
  background: #eee;
}
.info{
  background-color: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.tab {
  width: 100%;
  margin: 60rpx auto 0;
  padding-bottom: 60rpx;
}

.work{
  background-color: #eee;
}

.flex-wrp {
  margin-top: 60rpx;
  display: flex;
}

.flex-item {
  width: 375rpx;
  text-align: center;
  font-size: 26rpx;
}

.number {
  color: #000;
  line-height: 40rpx;
}

.cate {
  color: #8a8a8a;
  line-height: 40rpx;
}

.notlogin {
  width: 65%;
  margin: 8em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.notlogin-tips {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: inline-block;
  vertical-align: middle;
}
.notlogin-line {
    border-top: 1px solid #E5E5E5;
}
.notlogin-line .notlogin-tips {
    position: relative;
    top: -0.9em;
    padding: 0 .55em;
    background-color: #eee;
    color: #999999;
}

.item {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.item-photo {
  width: 100%;
  height: 450rpx;
  margin: 0;
  padding: 0;
  border: 0;
}
.item-title{
  font-family: PingFangSC-Regular,-apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: block;
  color: #000;
  font-size: 19px;
  text-align: center;
  line-height: 25px;
  width: 598rpx;
  margin: 76rpx auto 20rpx;
  padding-bottom: 20rpx;
}
.item-word {
  font-family: PingFangSC-Thin,-apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: block;
  font-size: 15px;
  line-height: 20px;
  text-align: center;
  color: #888;
  word-wrap: break-word;
  width: 640rpx;
  margin: 0 auto;
  padding-bottom: 60rpx;
}