/**music.wxss**/
.content{
  margin-top: 0rpx;
}
.item {
  min-height: 500rpx;
  width: 100%;
  display:table; 
  position: relative;
  color: #ffffff;
  overflow: hidden;
  margin-bottom: 0;

}
.item-bg{
    background-color: #a0a0a0;
    background-position: center;
    position: absolute;
    top: 0px;
    left: 0px;
    height: 110%;
    width: 110%;
    margin: -5%;
    background-size: cover;
    filter: blur(5px) brightness(0.6);
}
.bg-cover {
   
    height: 100%;
    width: 100%;
}
.item:nth-child(odd){
    color: #ffffff;
}
.item:nth-child(even){
    color: #000;
}

.item:nth-child(odd) .bg-cover{
     background: rgba(0, 0, 0, .6);
}
.item:nth-child(even) .bg-cover{
     background: rgba(255, 255, 255, .8);
}
.item-word {
  vertical-align:middle;    
  display:table-cell;  
  font-size: 14pt;
  line-height: 25pt;
  padding: 100rpx 40rpx;
  position: relative;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.meta{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center;
}
.dot{ 
  font-size: 24rpx;
  padding: 0 6rpx;
}

