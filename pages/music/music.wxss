/**music.wxss**/
.content{
  margin-top: 0rpx;
}
.item {
  min-height: 500rpx;
  width: 100%;
  display:table; 
  color: #353535;
  position: relative;
  color: #ffffff;
  overflow: hidden;
  margin-bottom: 0;

}
.item-bg{
    background-color: #a0a0a0;
    background-position: center;
    position: absolute;
    top: 0px;
    left: 0px;
    height: 110%;
    width: 110%;
    margin: -5%;
    background-size: cover;
    -webkit-filter: blur(5px) brightness(0.6);
    -moz-filter: blur(5px) brightness(0.6);
}
.bg-cover {
    background: rgba(0, 0, 0, .4);
    height: 100%;
    width: 100%;
}

.item-word {
  vertical-align:middle;    
  display:table-cell;  
  font-size: 40rpx;
  line-height: 70rpx;
  padding: 100rpx 40rpx;
  position: relative;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.meta{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center
}
.dot{
  color: #ffffff;
  font-size: 24rpx;
  padding: 0 6rpx;
}
.title{
  color: #ffffff;
}
.author{
  color: #ffffff;
}
