/**explore.wxss**/

page {
  background-color: #eee;
}

.container {
  padding: 0;
  background-color: #eee;
  box-sizing: border-box;
  min-height: 100%;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.content {
  width: 750rpx;
  margin: 46px auto 0;
  height: 100%;
  background: #eee;
  display: flex;
  flex-direction: row; /*决定主轴的方向（即项目的排列方向）。 水平方向*/
  flex-wrap: wrap; /*定义，如果一条轴线排不下，如何换行*/
  justify-content: flex-start; /* 定义了项目在主轴上的对齐方式 */
  align-items: baseline; /* 项目在交叉轴上如何对齐 */
  align-content: flex-start; /* 多根轴线的对齐方式 */
}

.item {
  background-color: #fff;
  width: 370rpx;
  margin-bottom: 10rpx;

}
.item:nth-child(odd){
  margin-left: 0rpx;
}
.item:nth-child(even){
  margin-left: 10rpx;
}
.item-photo {
  width: 370rpx;
  height: 370rpx;
  margin: 0;
  padding: 0;
  border: 0;
}

.item-title {
  font-family: PingFangSC-Regular, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: block;
  color: #888;
  font-size: 36rpx;
  text-align: center;
  width: 320rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-meta {
  font-family: PingFangSC-Regular, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  display: block;
  color: #888;
  font-size: 26rpx;
  text-align: center;
  width: 320rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

